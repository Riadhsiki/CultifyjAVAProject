<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.Menu.MainMenu"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #f0f0f0;">

    <VBox spacing="30" alignment="CENTER" AnchorPane.topAnchor="100.0"
          AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">

        <Label text="Menu Principal" style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #333;"/>

        <!-- Gestion des Réclamations -->
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="gestionReclamationsButton" text="Gestion des Réclamations"
                    style="-fx-min-width: 250px; -fx-min-height: 60px; -fx-font-size: 18;
                           -fx-background-color: #4CAF50; -fx-text-fill: white;
                           -fx-background-radius: 5; -fx-cursor: hand;"
                    onAction="#handleGestionReclamations"/>
        </HBox>

        <!-- Menu secondaire pour les réclamations et réponses -->
        <HBox fx:id="reclamationsMenuBox" spacing="20" alignment="CENTER" visible="false">
            <Button text="Réclamations"
                    style="-fx-min-width: 200px; -fx-min-height: 40px; -fx-font-size: 14;
                           -fx-background-color: #2196F3; -fx-text-fill: white;
                           -fx-background-radius: 5; -fx-cursor: hand;"
                    onAction="#openReclamationList"/>

            <Button text="Réponses"
                    style="-fx-min-width: 200px; -fx-min-height: 40px; -fx-font-size: 14;
                           -fx-background-color: #2196F3; -fx-text-fill: white;
                           -fx-background-radius: 5; -fx-cursor: hand;"
                    onAction="#openReponseList"/>
        </HBox>

        <!-- Gestion des Utilisateurs -->
        <Button fx:id="gestionUtilisateursButton" text="Gestion d'Utilisateurs"
                style="-fx-min-width: 250px; -fx-min-height: 60px; -fx-font-size: 18;
                       -fx-background-color: #FF9800; -fx-text-fill: white;
                       -fx-background-radius: 5; -fx-cursor: hand;"
                onAction="#handleGestionUtilisateurs"/>
    </VBox>

</AnchorPane>
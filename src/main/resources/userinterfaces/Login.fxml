<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.animation.*?>

<StackPane fx:id="rootPane" prefHeight="600" prefWidth="800" stylesheets="login-style.css"
           xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controllers.user.LoginController">
    <children>
        <BorderPane styleClass="main-container">
            <top>
                <VBox alignment="CENTER" spacing="20">
                    <padding>
                        <Insets top="40" />
                    </padding>
                    <children>
                        <ImageView fx:id="logoImage" fitHeight="120" fitWidth="120" preserveRatio="true">
                            <image>
                                <Image url="/images/LogoCultify.png" />
                            </image>
                        </ImageView>

                        <!-- Animated Welcome Text -->
                        <StackPane>
                            <children>
                                <Text fx:id="welcomeText" text="Bienvenue chez Cultify" styleClass="welcome-text">
                                    <!-- Animation applied in initialize() method in controller -->
                                </Text>
                            </children>
                        </StackPane>
                    </children>
                </VBox>
            </top>

            <center>
                <VBox alignment="CENTER" styleClass="login-container">
                    <padding>
                        <Insets top="20" right="40" bottom="40" left="40" />
                    </padding>

                    <!-- Login Form Box -->
                    <VBox styleClass="form-box" spacing="15">
                        <padding>
                            <Insets top="25" right="25" bottom="25" left="25" />
                        </padding>

                        <Label text="Connexion" styleClass="section-title" />

                        <VBox spacing="5">
                            <Label text="Email" styleClass="field-label" />
                            <TextField fx:id="emailField" promptText="Entrez votre email" styleClass="text-field" />
                            <Label fx:id="emailErrorLabel" styleClass="error-label" />
                        </VBox>

                        <VBox spacing="5">
                            <Label text="Mot de passe" styleClass="field-label" />
                            <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe" styleClass="text-field" />
                            <Label fx:id="passwordErrorLabel" styleClass="error-label" />
                        </VBox>

                        <HBox alignment="CENTER_RIGHT">
                            <Label text="Mot de passe oublié?" styleClass="link-label" />
                        </HBox>

                        <Button fx:id="loginButton" text="SE CONNECTER" styleClass="primary-button" onAction="#handleLogin" />

                        <HBox alignment="CENTER" spacing="5">
                            <Label text="Pas encore membre?" />
                            <Label text="S'inscrire" styleClass="link-label" />
                        </HBox>
                    </VBox>
                </VBox>
            </center>

            <bottom>
                <HBox alignment="CENTER" spacing="10">
                    <padding>
                        <Insets bottom="20" />
                    </padding>
                    <Label text="© 2025 Cultify. Tous droits réservés." styleClass="footer-text" />
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</StackPane>
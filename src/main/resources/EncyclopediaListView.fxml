<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.EncyclopediaListController"
            style="-fx-padding: 20;">

    <top>
        <HBox style="-fx-padding: 10; -fx-background-color: #2e86c1;">
            <Label text="EncyclopÃ©die Cultify" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;"/>

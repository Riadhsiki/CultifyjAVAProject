<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.animation.*?>

<StackPane fx:id="rootPane" prefHeight="600" prefWidth="800" stylesheets="login-style.css"
           xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="Controllers.User.ResetPasswordController">
    <children>
        <BorderPane styleClass="main-container">
            <top>
                <VBox alignment="CENTER" spacing="20">
                    <padding>
                        <Insets top="40" />
                    </padding>
                    <children>
                        <ImageView fx:id="logoImage" fitHeight="120" fitWidth="120" preserveRatio="true" styleClass="logo-image">
                            <image>
                                <Image url="@/images/LogoCultify.png" />
                            </image>
                        </ImageView>

                        <!-- Animated Title Text -->
                        <StackPane>
                            <children>
                                <Text fx:id="titleText" text="Réinitialisation du mot de passe" styleClass="welcome-text">
                                    <!-- Animation applied in initialize() method in controller -->
                                </Text>
                            </children>
                        </StackPane>
                    </children>
                </VBox>
            </top>

            <center>
                <VBox alignment="CENTER" styleClass="login-container">
                    <padding>
                        <Insets top="20" right="40" bottom="40" left="40" />
                    </padding>

                    <!-- Reset Password Form Box -->
                    <VBox styleClass="form-box" spacing="15">
                        <padding>
                            <Insets top="25" right="25" bottom="25" left="25" />
                        </padding>

                        <Text text="Entrez votre adresse email pour recevoir un lien de réinitialisation de mot de passe."
                              wrappingWidth="380" styleClass="info-text" />

                        <VBox spacing="5">
                            <Label text="Email" styleClass="field-label" />
                            <TextField fx:id="emailField" promptText="Entrez votre email" styleClass="text-field" />
                            <Label fx:id="emailErrorLabel" styleClass="error-label" />
                        </VBox>

                        <Button fx:id="resetButton" text="ENVOYER LE LIEN" styleClass="primary-button" onAction="#handleResetRequest" />

                        <Separator>
                            <VBox.margin>
                                <Insets top="10" bottom="10" />
                            </VBox.margin>
                        </Separator>

                        <HBox alignment="CENTER" spacing="5">
                            <Button fx:id="backToLoginButton" text="RETOUR À LA CONNEXION" styleClass="secondary-button" onAction="#navigateToLogin" />
                        </HBox>
                    </VBox>
                </VBox>
            </center>

            <bottom>
                <HBox alignment="CENTER" spacing="10">
                    <padding>
                        <Insets bottom="20" />
                    </padding>
                    <Label text="© 2025 Cultify. Tous droits réservés." styleClass="footer-text" />
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</StackPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="10.0" prefHeight="400.0" prefWidth="300.0"
      xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.auth.ForgotPasswordController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Forgot Password" />
        <Text fx:id="errorMessage" text="Error message" managed="false" visible="false" />
        <Text fx:id="successMessage" text="Success message" managed="false" visible="false" />
        <Label text="Enter your email:" />
        <TextField fx:id="emailField" promptText="Enter your email" prefWidth="200.0" />
        <Button fx:id="submitButton" onAction="#handleSubmit" text="Submit" />
        <Hyperlink onAction="#navigateToLogin" text="Back to Login" />
    </children>
</VBox>